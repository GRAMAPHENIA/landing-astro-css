---
// /components/Cta.astro
// Bloque de llamado a la acción final (CTA) antes del footer
---

<section id="cta" class="cta container section" aria-labelledby="cta-title">
  <h2 id="cta-title">¿Listo para dar el siguiente paso?</h2>
  <p>
    Unite a cientos de profesionales que ya están mejorando su productividad 
    con <strong>nuestro producto</strong>.
  </p>
  <a href="#contacto" class="cta-button">Comenzar ahora</a>
</section>

<style>
  .cta {
    text-align: center;
    padding: 4rem 2rem;
    background: oklch(95% 0.02 90 / 0.3);
    margin-bottom: 3rem;
  }

  .cta h2 {
    font-size: 1.8rem;
    margin-bottom: 1rem;
    color: var(--color-text-dark);
  }

  .cta p {
    margin-bottom: 2rem;
    color: var(--color-text-muted);
    max-width: 600px;
    margin-inline: auto;
  }

  .cta-button {
    display: inline-block;
    background: var(--color-text-dark);
    color: var(--color-base);
    padding: 0.75rem 1.5rem;
    text-decoration: none;
    transition: background 0.3s ease;
    border: 1px solid var(--color-border-primary);
    border-radius: 0;
  }

  .cta-button:hover,
  .cta-button:focus {
    background: var(--color-text);
  }
  
  /* Responsive para CTA */
  @media (max-width: 768px) {
    .cta {
      padding: 3rem 1.5rem;
    }
    
    .cta h2 {
      font-size: 1.5rem;
    }
    
    .cta p {
      font-size: 1rem;
      margin-bottom: 1.5rem;
    }
    
    .cta-button {
      padding: 1rem 2rem;
      font-size: 1rem;
      width: 100%;
      max-width: 280px;
      margin: 0 auto;
      display: block;
      text-align: center;
    }
  }
  
  @media (max-width: 576px) {
    .cta {
      padding: 2.5rem 1rem;
    }
    
    .cta h2 {
      font-size: 1.3rem;
    }
    
    .cta-button {
      max-width: 100%;
    }
  }
</style>
