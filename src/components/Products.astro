// components/Products.astro
---

<section
  id="productos"
  class="products-section"
  aria-labelledby="productos-title"
>
  <div class="container">
    <div class="section-header animate-on-scroll">
      <h2 id="productos-title" class="section-title">Nuestros Productos</h2>
      <p class="section-subtitle">
        Soluciones diseñadas para impulsar tu negocio hacia el siguiente nivel
      </p>
    </div>

    <div class="products-grid">
      <article class="product-card animate-on-scroll hover-lift">
        <div class="product-image">
          <img 
            src="/hero.png" 
            alt="Producto Analytics - Dashboard completo de análisis de datos" 
            width="400" 
            height="250" 
            loading="lazy" 
          />
          <div class="product-badge">Más Popular</div>
        </div>
        <div class="product-content">
          <h3>Analytics Pro</h3>
          <p>
            Analiza tus datos en tiempo real con dashboards intuitivos y reportes automatizados que impulsan la toma de decisiones inteligentes.
          </p>
          <div class="product-features">
            <span class="feature">✓ Reportes en tiempo real</span>
            <span class="feature">✓ 50+ integraciones</span>
            <span class="feature">✓ Alertas personalizadas</span>
          </div>
          <div class="product-footer">
            <span class="product-price">$99/mes</span>
            <a href="#contacto" class="btn btn-primary btn-small">Empezar</a>
          </div>
        </div>
      </article>

      <article class="product-card animate-on-scroll hover-lift fade-in-delay-1">
        <div class="product-image">
          <img 
            src="/hero.png" 
            alt="Producto Automation - Herramientas de automatización empresarial" 
            width="400" 
            height="250" 
            loading="lazy" 
          />
          <div class="product-badge">Nuevo</div>
        </div>
        <div class="product-content">
          <h3>Automation Suite</h3>
          <p>
            Automatiza procesos repetitivos y optimiza flujos de trabajo para aumentar la eficiencia de tu equipo hasta un 200%.
          </p>
          <div class="product-features">
            <span class="feature">✓ Flujos personalizables</span>
            <span class="feature">✓ API completa</span>
            <span class="feature">✓ Soporte 24/7</span>
          </div>
          <div class="product-footer">
            <span class="product-price">$149/mes</span>
            <a href="#contacto" class="btn btn-primary btn-small">Empezar</a>
          </div>
        </div>
      </article>

      <article class="product-card animate-on-scroll hover-lift fade-in-delay-2">
        <div class="product-image">
          <img 
            src="/hero.png" 
            alt="Producto Enterprise - Solución empresarial completa" 
            width="400" 
            height="250" 
            loading="lazy" 
          />
          <div class="product-badge">Empresas</div>
        </div>
        <div class="product-content">
          <h3>Enterprise</h3>
          <p>
            Solución completa para grandes organizaciones con funciones avanzadas, seguridad empresarial y soporte dedicado.
          </p>
          <div class="product-features">
            <span class="feature">✓ Usuarios ilimitados</span>
            <span class="feature">✓ SSO y SAML</span>
            <span class="feature">✓ Manager dedicado</span>
          </div>
          <div class="product-footer">
            <span class="product-price">Personalizado</span>
            <a href="#contacto" class="btn btn-primary btn-small">Contactar</a>
          </div>
        </div>
      </article>
    </div>

    <div class="products-cta animate-on-scroll fade-in-delay-3">
      <p>¿No estás seguro cuál es mejor para ti?</p>
      <a href="#contacto" class="btn btn-secondary">
        Habla con nuestro equipo
      </a>
    </div>
  </div>
</section>

<style>
  .products-section {
    padding: 5rem 0;
    background: var(--color-base);
    position: relative;
  }

  .section-header {
    text-align: center;
    max-width: 600px;
    margin: 0 auto 4rem;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-text-dark);
    margin-bottom: 1rem;
  }

  .section-subtitle {
    font-size: 1.2rem;
    color: var(--color-text-muted);
    line-height: 1.6;
  }

  .products-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .product-card {
    background: var(--color-base);
    border-radius: 0;
    overflow: hidden;
    box-shadow: none;
    transition: all 0.3s ease;
    border: 1px solid var(--color-border-light);
  }

  .product-card:hover {
    box-shadow: 0 4px 20px var(--color-border);
    border-color: var(--color-border-primary);
  }

  .product-image {
    position: relative;
    overflow: hidden;
  }

  .product-image img {
    width: 100%;
    height: 250px;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .product-card:hover .product-image img {
    transform: scale(1.05);
  }

  .product-badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: var(--color-primary);
    color: var(--color-base);
    padding: 0.5rem 1rem;
    border-radius: 0;
    font-size: 0.8rem;
    font-weight: 600;
  }

  .product-content {
    padding: 2rem;
  }

  .product-content h3 {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text-dark);
    margin-bottom: 1rem;
  }

  .product-content p {
    color: var(--color-text-muted);
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .product-features {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-bottom: 2rem;
  }

  .feature {
    font-size: 0.9rem;
    color: var(--color-text);
    display: flex;
    align-items: center;
  }

  .product-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .product-price {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text-dark);
  }

  .btn-small {
    padding: 0.5rem 1.5rem;
    font-size: 0.9rem;
  }

  .products-cta {
    text-align: center;
    padding: 2rem;
    background: var(--color-accent-light);
    border-radius: 0;
    border: 1px solid var(--color-border-light);
  }

  .products-cta p {
    font-size: 1.1rem;
    color: var(--color-text-muted);
    margin-bottom: 1rem;
  }

  /* Responsive design mejorado */
  @media (max-width: 576px) {
    .products-section {
      padding: 3rem 0;
    }
    
    .section-header {
      margin-bottom: 2.5rem;
    }
    
    .section-title {
      font-size: 2rem;
    }
    
    .section-subtitle {
      font-size: 1rem;
    }
    
    .product-content {
      padding: 1.5rem;
    }
    
    .product-content h3 {
      font-size: 1.3rem;
    }
    
    .product-features {
      margin-bottom: 1.5rem;
    }
    
    .feature {
      font-size: 0.85rem;
    }
    
    .product-price {
      font-size: 1.3rem;
    }
    
    .products-cta {
      padding: 1.5rem;
      margin: 0 1rem;
    }
    
    .products-cta p {
      font-size: 1rem;
    }
  }

  @media (min-width: 768px) {
    .products-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
    }
  }

  @media (min-width: 1024px) {
    .products-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 2.5rem;
    }

    .section-title {
      font-size: 3rem;
    }
  }

  /* Hover effects para tarjetas populares */
  .product-card:first-child .product-badge {
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    animation: pulse 2s infinite;
  }

  .product-card:nth-child(2) .product-badge {
    background: linear-gradient(135deg, var(--color-secondary), var(--color-accent));
  }

  .product-card:nth-child(3) .product-badge {
    background: linear-gradient(135deg, var(--color-text), var(--color-primary));
  }

  @keyframes pulse {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.05);
    }
  }
</style>
